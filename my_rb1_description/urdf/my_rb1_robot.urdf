<?xml version="1.0"?>

<robot name="my_rb1_robot">

<!-- Material Definitions -->
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <material name="grey">
    <color rgba="0.5 0.5 0.5 0.7"/>
  </material>

  <material name="blue">
    <color rgba="0 0 1 0.5"/>
  </material>
  
  <!-- Dummy link for KDL Warning correction-->
  <link name="link_chassis">

  </link>

  <!-- Base link -->
    <gazebo reference="base_link">
        <material>Gazebo/Black</material>
    </gazebo>

  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="25"/> <!-- Robot weight 25 kg -->
      <!-- moment of inertia for cylinder: 1/12*m*(3*r^2 + h^2) for ixx and iyy, 
      1/2 * m * r^2 for izz (r=0.25 and m=25)-->
      <inertia ixx="1.3" ixy="0" ixz="0" iyy="1.3" iyz="0" izz="0.52"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.25" length="0.3"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.25" length="0.3"/>
      </geometry>
    </collision>
  </link>


  <!-- wheel -->
  <link name="left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.05"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>
  <link name="right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.05"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <!-- caster wheel -->
  <link name="front_caster">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.0125"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>
  <link name="back_caster">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.0125"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>

  <!-- laser -->

  <!-- Gazebo tags - Laser scan -->
    <gazebo reference="joint_laser_scan_chassis">
        <preserveFixedJoint>true</preserveFixedJoint>
    </gazebo>
    <gazebo reference="link_laser_scan">
        <material>Gazebo/DarkGrey</material>
    </gazebo>

    <link name="link_laser_scan">
        <!-- <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="0.5" />
            <inertia ixx="0.000252666666667" ixy="0" ixz="0" iyy="0.000252666666667" iyz="0" izz="0.0005"/>
        </inertial> -->
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
            <material name="Red">
                <color rgba="0.7 0.1 0.1 1" />
            </material>
        </visual>
        <!-- <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
        </collision> -->
    </link>

  <!-- Joint definitions -->
  <joint name="chassis_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="link_chassis"/>
    <child link="base_link"/>
  </joint>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.0 -0.2 -0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="0" velocity="0"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.0 0.2 -0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="0" velocity="0"/>
  </joint>

  <joint name="front_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_caster"/>
    <origin xyz="-0.1 0 -0.15" rpy="0 0 0"/>
  </joint>

  <joint name="back_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="back_caster"/>
    <origin xyz="0.1 0 -0.15" rpy="0 0 0"/>
  </joint>


  <!-- Joint for front_laser -->
  <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="link_laser_scan"/>
    <origin xyz="0.25 0 0.075" rpy="3.14159 0 0"/> <!--laser upside down by pi radians-->
  </joint>




</robot>